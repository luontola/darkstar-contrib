<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.gamalocus.darkstar-contrib</groupId>
	<artifactId>darkstar-adminclient</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>Darkstar Admin Client</name>
	<description>An Admin Client for SUN Darkstar server</description>
	<url>http://code.google.com/p/darkstar-contrib/</url>
	<inceptionYear>2008</inceptionYear>

	<licenses>
		<license>
			<name>BSD License</name>
			<url>
				http://www.opensource.org/licenses/bsd-license.php
			</url>
		</license>
	</licenses>

	<developers>
		<developer>
			<id>greisen</id>
			<name>Emanuel Greisen</name>
			<url>http://www.emanuelgreisen.dk/</url>
		</developer>
	</developers>

	<scm>
		<connection>
			scm:svn:http://darkstar-contrib.googlecode.com/svn/trunk/darkstar-adminclient
		</connection>
		<developerConnection>
			scm:svn:https://darkstar-contrib.googlecode.com/svn/trunk/darkstar-adminclient
		</developerConnection>
		<url>
			http://code.google.com/p/darkstar-contrib/source/browse/trunk/darkstar-adminclient
		</url>
	</scm>

	<distributionManagement>
		<repository>
			<id>gamalocus.net-ssh</id>
			<url>
				scpexe://gamalocus.com/home/apache/websites/www.gamalocus.com/maven2
			</url>
		</repository>
	</distributionManagement>



	<repositories>
		<repository>
			<id>orfjackal</id>
			<url>http://repo.orfjackal.net/maven2</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.projectdarkstar</groupId>
			<artifactId>darkstar-server</artifactId>
			<version>0.9.6</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.projectdarkstar</groupId>
			<artifactId>darkstar-client</artifactId>
			<version>0.9.6</version>
		</dependency>
		<dependency>
			<groupId>com.gamalocus.darkstar-contrib</groupId>
			<artifactId>darkstar-service-datainspector</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>

			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>